<div class = "container">
    <div class = "row d-flex justify-content-between">
        <div class="col-md-5" id="burgerList">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block eaten=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-5" id="eatenList">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block eaten=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class = "row d-flex justify-content-center">
        <div class = "col-md-5">
            <form class="create-form">
                <div class="form-group">
                    <label for="new-buger">Burger Name:</label>
                    <input type="text" id="new-burger" name="burger">
                </div>
                <button type="submit" id="addButton">Add Burger</button>
            </form>
        </div>
    </div>
</div>