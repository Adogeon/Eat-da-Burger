<div class = "container">
    <div class="jumbotron bg-warning">
        <h1><strong><i class="fas fa-hamburger fa-3x mx-2"></i>EAT-DA-BURGER</strong></h1>
    </div>
    <div class = "row d-flex justify-content-center">
        <div class="col-md-3 mx-1" id="burgerList">
            <div class="h3 text-center"><strong>Eat</strong></div>
            <hr>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block eaten=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-3 mx-1" id="eatenList">
            <div class="h3 text-center"><strong>Aet</strong></div>
            <hr>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block eaten=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class = "row d-flex justify-content-center">
        <div class = "mx-1 my-2">
            <form class="create-form">
                <div class="form-group">
                    <label for="new-buger">New Burger:</label>
                    <input type="text" id="new-burger" name="burger">
                    <button type="submit" id="addButton">Add Burger</button>
                </div>
            </form>
        </div>
    </div>
</div>